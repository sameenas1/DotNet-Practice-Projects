@{
    ViewData["Title"] = "Index";
}
@model List<Product>


<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>

                <li><a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">@product.Name</a></li>
                <td>@product.Description</td>
                <td>@product.Category</td>
            </tr>
        }
    </tbody>
</table>