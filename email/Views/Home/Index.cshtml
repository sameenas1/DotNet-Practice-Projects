@{
    ViewBag.Title = "Send Email";
}

<h2>Send Email</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

@using (Html.BeginForm("SendEmail", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Recipient Email:")
        @Html.TextBox("recipient", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Subject:")
        @Html.TextBox("subject", null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Body:")
        @Html.TextArea("body", null, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Send Email</button>
}